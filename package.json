{
  "name": "react-dynamic-table",
  "version": "1.0.0",
  "description": "A React table to show and edit data dyanmically.",
  "main": "src/DynamicTable.js",
  "scripts": {
    "clean": "rm -rf build dist",
    "jsx": "jsx src dist",
    "browserify": "mkdir -p build && browserify -o build/bundle.js dist/main.js",
    "uglify": "uglifyjs -v -o build/min.js build/bundle.js",
    "jsdoc": "jsdoc -d doc/jsdoc dist",
    "build": "npm-run-all clean jsx browserify",
    "doc": "npm-run-all clean jsx jsdoc",
    "watch:build": "watch \"npm run build\" src",
    
    "build2": "npm-run-all clean jsx browserify uglify",
    "watch2": "watchify main.js -o build/bundle.js -v -d",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jack Huang <jack.huang78@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.5",
    "bootstrap-datepicker": "^1.4.0",
    "case": "^1.2.1",
    "jquery": "^2.1.4",
    "js-cookie": "^2.0.3",
    "lodash": "^3.10.0",
    "moment": "^2.10.3",
    "react": "^0.13.3",
    "react-bootstrap": "^0.23.7",
    "react-cookie": "^0.2.5",
    "react-datepicker": "^0.10.0",
    "react-number-editor": "^2.2.0",
    "reactify": "^1.1.1",
    "uuid": "^2.0.1"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "jshintConfig": {
    "laxbreak": true,
    "eqnull": true
  },
  "devDependencies": {
    "browserify": "^11.0.1",
    "jsdoc": "^3.3.2",
    "npm-run-all": "^1.2.6",
    "react-tools": "^0.13.3",
    "uglifyjs": "^2.4.10",
    "watch": "^0.16.0"
  }
}
